{
  "name": "pantry",
  "version": "0.1.0",
  "description": "Kitchen inventory organizer and planner",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjhoerr/pantry.git"
  },
  "author": "Kevin J Hoerr <kjhoerr@submelon.tech>",
  "license": "BlueOak-1.0.0",
  "scripts": {
    "dev:be": "mvn quarkus:dev",
    "dev:fe": "nodemon --watch src/gql --watch src/components --watch src/hooks --watch src/model --watch src/pages --watch src/store --watch src/styles --watch src/util -e ts,tsx,css -x 'APP_ENV=development yarn inject'",
    "dev:schema": "graphql-codegen --watch 'src/main/java/**/*.java'",
    "dev": "npm-run-all --parallel dev:*",
    "build": "next build && next export",
    "start": "next start",
    "lint": "next lint && prettier --check 'src/**/*.(ts|tsx)'",
    "format": "prettier --write 'src/**/*.(ts|tsx)'",
    "codegen": "graphql-codegen && yarn format",
    "inject": "mkdir -p src/main/resources/META-INF/resources && rm -rf src/main/resources/META-INF/resources && yarn build && cp -R out src/main/resources/META-INF/resources"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.13",
    "@reduxjs/toolkit": "^1.9.1",
    "@rtk-query/graphql-request-base-query": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "flowbite": "^1.6.0",
    "flowbite-react": "^0.3.7",
    "graphql": "^16.6.0",
    "graphql-request": "4.3.0",
    "next": "13.1.1",
    "next-redux-wrapper": "^8.1.0",
    "postcss": "^8.4.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.5",
    "redux": "^4.2.0",
    "tailwindcss": "^3.2.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "latest",
    "@graphql-codegen/typescript": "latest",
    "@graphql-codegen/typescript-operations": "latest",
    "@graphql-codegen/typescript-rtk-query": "latest",
    "@trivago/prettier-plugin-sort-imports": "latest",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/uuid": "latest",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "latest",
    "graphql-tag": "latest",
    "nodemon": "latest",
    "npm-run-all2": "latest",
    "prettier": "latest",
    "redux-devtools-extension": "latest",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "packageManager": "yarn@3.2.2"
}
